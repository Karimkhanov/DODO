<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back"
        android:onClick="goBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:backgroundTint="@color/white"
        android:background="@drawable/round"
        />


    <ImageView
        android:id="@+id/pRes"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        tools:srcCompat="@drawable/pizza_background" />



    <TextView
        android:id="@+id/resAc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Banner Title" />

    <TextView
        android:id="@+id/pizzz_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        tools:text="Banner Description" />



    <Button
        android:id="@+id/sale_pizza_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="@color/oranfe"
        android:text="В корзину"
        android:textColor="@color/or"
        android:textSize="18sp" />

</LinearLayout>
