<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/pizza_image"
        android:layout_width="171dp"
        android:layout_height="match_parent"
        tools:srcCompat="@drawable/pizza_background" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">


        <TextView
            android:id="@+id/pizza_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Наруто Пицца"/>



        <TextView
            android:id="@+id/pizza_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            tools:text="Куриные кусочки, соус терияки, ананасы, моцарелла, фирменный соус альфредо"
            />

        <Button
            android:id="@+id/pizza_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:backgroundTint="@color/or"
            android:textColor="@color/oran"
            tools:text="3 900 ₸" />

    </LinearLayout>


</LinearLayout>